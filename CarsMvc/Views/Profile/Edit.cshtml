@model CarsMvc.ViewModel.EditProfileViewModel

@{
    ViewBag.Title = "Edit";
}

@section LeftPanel{
    <div class="panel-heading">Edit Profile</div>
    <div class="panel-body">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><h2>@Security.GetCurrentUser().Username</h2></div>
        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4"><center><img height="140" width="140" src="/Content/Template/img/user.jpg" alt="user" class="img-circle" style=" margin-top: 7px;"></center></div>
        <div class="col-xs-12 col-sm-7 col-md-8 col-lg-8">
            @using (var editForm = Html.BeginForm("edit", "profile", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken();
                @Html.HiddenFor(m => m.ID)
                <div class="form-group @(Html.ViewData.ModelState.IsValidField("Name") ? "" : "has-error has-feedback") edit-profile">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control" })
                    @if (!Html.ViewData.ModelState.IsValidField("Name"))
                    {
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    }
                </div>
                <div class="form-group @(Html.ViewData.ModelState.IsValidField("Email") ? "" : "has-error has-feedback") edit-profile">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control", type = "email" })
                    @if (!Html.ViewData.ModelState.IsValidField("Email"))
                    {
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    }
                </div>
                <div class="form-group @(Html.ViewData.ModelState.IsValidField("Bio") ? "" : "has-error has-feedback") edit-profile">
                    @Html.LabelFor(m => m.Bio)
                    @Html.TextAreaFor(m => m.Bio, new { placeholder = "Bio", @class = "form-control", rows = "5" })
                    @if (!Html.ViewData.ModelState.IsValidField("Bio"))
                    {
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    }
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            }
        </div>
    </div>
}